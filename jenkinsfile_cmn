
node() {

  currentBuild.result = "SUCCESS"
  try {
        stage 'Checkout'
                checkout scm
    
        stage 'Health Check'
                sh '''#!/bin/bash
                    state=$(curl https://ongdev.itradenetwork.net/catalog/api/actuator/health)
                    json=($(echo $state | tr '"' '\n' | grep DOWN))
                    for i in ${json[@]}
                    do
                        if [ $i == "DOWN" ]
                      then
                        exit 1
                      else
                        echo "All services are UP !"
                      fi
                    done
                   '''
        
        stage 'Deploy'
                sh '''
                    echo "Proceeded to Next Step"
                   '''
                    
  }
  catch(err) {
      currentBuild.result = "FAILURE"
      throw err
  }
}
